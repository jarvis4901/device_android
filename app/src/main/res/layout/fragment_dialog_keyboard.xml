<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="@drawable/shape_fragment_keyboard"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <com.bepi.ugandroid.ui.common.CustomKeyBoardView
        android:id="@+id/key_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/keyboardBgColor"
        android:keepScreenOn="false"
        android:keyBackground="@drawable/selector_key_board"
        android:keyTextColor="@color/keyboardTextColor"
        android:keyTextSize="@dimen/keyboardSize"
        android:paddingTop="@dimen/keyboardGap"
        android:paddingRight="@dimen/keyboardGap"
        android:paddingBottom="@dimen/keyboardGap"
        android:shadowRadius="0" />

</LinearLayout>